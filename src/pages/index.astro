---
import Layout from '../layouts/Layout.astro';
---

<style>
    /* General CSS */

    /* Root */
    :root {
        --apple-blue: #2997ff;
        --bg-dark: #000;
        --card-bg: #1a1a1a;
    }

    /* Key Frames */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }

    /* Base Styles */
    body {
        background-color: var(--bg-dark);
        color: white;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Typography */
    h1, h2, h3 {
        font-weight: 600;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2.8rem;
        background: #ffffff;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: inline-block;
    }

    h2 {
        font-size: 2.2rem;
        position: relative;
        display: inline-block;
    }

    h2:after {
        content: '';
        position: absolute;
        width: 50%;
        height: 4px;
        bottom: -8px;
        left: 0;
        background: linear-gradient(90deg, var(--apple-blue), transparent);
        border-radius: 2px;
    }

    h3 {
        font-size: 1.6rem;
    }

    /* Links & Buttons */
    a {
        color: var(--apple-blue);
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
    }

    a:hover {
        color: var(--apple-blue);
    }

    a::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: var(--apple-blue);
        transition: width 0.3s ease;
    }

    a:hover::after {
        width: 100%;
        display: none;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        background-color: var(--apple-blue);
        color: #fff;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        font-weight: 500;
    }

    .btn:hover {
        background-color: #2997ff;
        transform: translateY(-3px);
        color: white;
    }

    .btn-minor {
        display: inline-block;
        padding: 12px 24px;
        background-color: #1a1a1a;
        color: #fff;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-minor:hover {
        background-color: #2997ff;
        transform: translateY(-3px);
    }

    /* Cards */
    html {
        scroll-behavior: smooth;
    }

    .card {
        background-color: var(--card-bg);
        border-radius: 16px;
        padding: 28px;
        margin-bottom: 28px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0;
        animation: fadeIn 0.6s forwards;
        animation-delay: calc(var(--order) * 0.1s);
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.25);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .card ul {
        list-style-type: none;
        padding-left: 0;
    }

    .card ul li {
        margin-bottom: 16px;
        padding-left: 24px;
        position: relative;
    }

    .card ul li:before {
        content: '‚Üí';
        position: absolute;
        left: 0;
        color: white;
    }

    section {
        margin-bottom: 60px;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.6s ease;
    }

    section.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Section Based CSS*/

    /* Hero */
    .hero {
        text-align: center;
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
    }

    .hero:before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(41, 151, 255, 0.1) 0%, rgba(0, 0, 0, 0) 70%);
        z-index: -1;
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 24px;
        animation: float 4s ease-in-out infinite;
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto 32px;
    }

    .hero-roles {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin-bottom: 32px;
    }

    .hero-role {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.75);
        font-weight: 400;
    }

    .hero-role-btn {
        display: inline-block;
        padding: 12px 24px;
        font-size: 1rem;
        color: var(--apple-blue);
        background: transparent;
        border: 2px solid var(--apple-blue);
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .hero-role-btn:hover {
        background: var(--apple-blue);
        color: white;
        transform: translateY(-2px);
    }

    .hero-role-btn::after {
        display: none;
    }

    .hero-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-top: 32px;
    }

    /* Most Used */
    .tech-card {
        transform-origin: center;
        will-change: transform;
    }

    .tech-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 10px 25px rgba(41, 151, 255, 0.15);
        border-color: rgba(41, 151, 255, 0.4);
        background: linear-gradient(135deg, rgba(41, 151, 255, 0.15) 0%, rgba(0, 0, 0, 0) 100%) !important;
        transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94); /* Smoother easing */
    }

    .tech-grid {
        animation: fadeIn 0.6s forwards;
        transform-style: preserve-3d; /* Helps with smooth transitions */
    }

    @media (max-width: 768px) {
        .tech-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Project */
    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 24px;
        margin-top: 32px;
    }

    .project-card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 24px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .project-card h3 {
        margin-top: 0;
    }

    .project-card .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin: 16px 0;
    }

    .project-card .tag {
        background: rgba(41, 151, 255, 0.2);
        color: var(--apple-blue);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    /* Experience */
    .timeline {
        position: relative;
        padding-left: 30px;
        margin-top: 40px;
    }

    .timeline:before {
        content: '';
        position: absolute;
        left: 6px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, var(--apple-blue), transparent);

    }

    .timeline-item {
        position: relative;
        margin-bottom: 40px;
        padding-left: 30px;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-item:before {
        content: '';
        position: absolute;
        left: 0;
        top: 5px;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: white;
        border: 3px solid var(--card-bg);
    }

    .timeline-date {
        color: white;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .timeline-content h3 {
        margin-top: 0;
    }

    /* Highlight Cards (Football & Research) */
    .highlight-card {
        background-color: var(--card-bg);
        border-radius: 16px;
        padding: 28px;
        margin-bottom: 28px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0;
        animation: fadeIn 0.6s forwards;
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .highlight-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.25);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .highlight-card-content {
        flex: 1;
    }

    .highlight-card-content h3 {
        font-size: 1.3rem;
        margin-bottom: 8px;
    }

    .highlight-card-content p {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .highlight-card img {
        width: 80px;
        height: 80px;
        object-fit: contain;
        opacity: 0.9;
        flex-shrink: 0;
        transition: transform 0.3s ease;
    }

    .highlight-card img:hover {
        transform: scale(1.1);
    }

    #football-highlight .highlight-card {
        border-left: 6px solid #6b8fa8;
        animation-delay: 0.1s;
    }

    #football-highlight .highlight-card:hover {
        box-shadow: 0 12px 28px rgba(107, 143, 168, 0.15);
        border-color: rgba(107, 143, 168, 0.3);
    }

    #football-highlight h3 {
        color: #8fb3cc;
    }

    #football-highlight .btn {
        background-color: #6b8fa8;
    }

    #football-highlight .btn:hover {
        background-color: #5a7e97;
    }

    #research-highlight .highlight-card {
        border-left: 6px solid var(--apple-blue);
        animation-delay: 0.2s;
    }

    #research-highlight .highlight-card:hover {
        box-shadow: 0 12px 28px rgba(41, 151, 255, 0.15);
        border-color: rgba(41, 151, 255, 0.3);
    }

    #research-highlight h3 {
        color: var(--apple-blue);
    }

    /* Education */
    #education .card {
        background-color: #1a1a1a;
        border-left: 6px solid #b30738;
    }

    #education h2:after {
        background: linear-gradient(90deg, #b30738, transparent);
    }

    #education h3 {
        color: #b30738;
    }

    #education .btn {
        background-color: #b30738;
    }

    #education .btn:hover {
        background-color: #9d0631;
    }

    #education .card:hover {
        box-shadow: 0 12px 28px rgba(179, 7, 56, 0.2);
        border-color: rgba(179, 7, 56, 0.3);
    }

    #education img {
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    
    #education img:hover {
        transform: scale(1.05);
        opacity: 1;
    }  

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        h1 {
            font-size: 2.2rem;
        }
        
        h2 {
            font-size: 1.8rem;
        }
        
        .hero h1 {
            font-size: 2.5rem;
        }
        
        .project-grid {
            grid-template-columns: 1fr;
        }
        
        .hero-buttons {
            flex-direction: column;
            align-items: center;
        }
    }

    .horizontal-scroll-container {
        display: flex;
        overflow-x: auto;
        padding: 16px 0 8px 4px;
        gap: 32px;
        scroll-snap-type: x mandatory;
        scrollbar-width: thin;
        scrollbar-color: rgba(255,255,255,0.2) transparent;
        -webkit-overflow-scrolling: touch;
    }

    .horizontal-scroll-container::-webkit-scrollbar {
        height: 6px;
    }

    .horizontal-scroll-container::-webkit-scrollbar-track {
        background: transparent;
    }

    .horizontal-scroll-container::-webkit-scrollbar-thumb {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 3px;
    }

    .project-card {
        min-width: 340px;
        flex-shrink: 0;
        scroll-snap-align: start;
        background: var(--card-bg);
        border-radius: 16px;
        padding: 24px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

     /* Gallery */
    .gallery-wrapper {
    position: relative;
    margin-top: 24px;
    }

    .gallery-scroll {
    display: flex;
    overflow-x: auto;
    gap: 20px;
    padding: 16px 0 8px 4px;
    scroll-snap-type: x mandatory;
    scrollbar-width: thin;
    scrollbar-color: rgba(255,255,255,0.2) transparent;
    -webkit-overflow-scrolling: touch;
    }

    .gallery-scroll::-webkit-scrollbar { height: 6px; }
    .gallery-scroll::-webkit-scrollbar-track { background: transparent; }
    .gallery-scroll::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
    }

    .gallery-item {
    flex: 0 0 360px;
    width: 360px;
    flex-shrink: 0;
    scroll-snap-align: start;
    background: var(--card-bg);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .gallery-item img {
    width: 100%;
    height: 220px;
    object-fit: contain;
    display: block;
    background: #000;
    }

    .gallery-caption {
    padding: 14px 16px;
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.95rem;
    }

    @media (max-width: 768px) {
    .gallery-item { min-width: 280px; }
    .gallery-item img { height: 180px; }
    }

    /* .gallery-item img {
    width: 100%;
    height: auto;
    max-height: 320px;
    object-fit: contain;
    } */

    /* Lightbox */
    .gallery-item img,
    .gallery-media img {
    cursor: zoom-in;
    }

    .lightbox {
    position: fixed;
    inset: 0;
    z-index: 9999;

    display: flex;
    align-items: center;
    justify-content: center;

    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    }

    .lightbox.open {
    opacity: 1;
    pointer-events: auto;
    }

    .lightbox-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.75);
    }

    .lightbox-content {
    position: relative;
    z-index: 1;

    width: min(1000px, 92vw);
    max-height: 86vh;
    padding: 14px;
    border-radius: 16px;
    background: var(--card-bg);
    border: 1px solid rgba(255,255,255,0.12);

    box-shadow: 0 18px 60px rgba(0,0,0,0.6);
    transform: translateY(10px) scale(0.98);
    transition: transform 0.2s ease;
    }

    .lightbox.open .lightbox-content {
    transform: translateY(0) scale(1);
    }

    .lightbox-img {
    width: 100%;
    max-height: 72vh;
    object-fit: contain;
    display: block;
    border-radius: 12px;
    }

    .lightbox-caption {
    margin-top: 10px;
    color: rgba(255,255,255,0.8);
    font-size: 0.95rem;
    }

    .lightbox-close {
    position: absolute;
    top: 8px;
    right: 10px;
    width: 38px;
    height: 38px;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.12);
    background: rgba(0,0,0,0.35);
    color: white;
    cursor: pointer;
    font-size: 22px;
    line-height: 1;
    }

    .lightbox-close {
    z-index: 10;
    }

    @media (max-width: 768px) {
    .lightbox-content {
        padding-top: calc(56px + env(safe-area-inset-top));
    }

    .lightbox-close {
        top: calc(10px + env(safe-area-inset-top));
        right: 12px;
    }
    }

    .xp-list {
    position: relative;
    margin-top: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding-left: 18px;
    }

    .xp-list:before {
    content: "";
    position: absolute;
    left: 6px;
    top: 8px;
    bottom: 8px;
    width: 2px;
    background: linear-gradient(to bottom, rgba(41,151,255,0.9), transparent);
    opacity: 0.9;
    }

    .xp-item {
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.10);
    border-radius: 14px;
    overflow: hidden;
    transition: transform 0.25s ease, border-color 0.25s ease, box-shadow 0.25s ease;
    }

    .xp-item:hover {
    transform: translateY(-3px);
    border-color: rgba(41,151,255,0.35);
    box-shadow: 0 10px 26px rgba(0,0,0,0.35);
    }

    .xp-summary {
    list-style: none;
    cursor: pointer;
    display: grid;
    grid-template-columns: 18px 1fr auto;
    gap: 14px;
    align-items: center;
    padding: 14px 16px;
    }

    .xp-summary::-webkit-details-marker {
    display: none;
    }

    .xp-dot {
    width: 12px;
    height: 12px;
    border-radius: 999px;
    background: #fff;
    border: 3px solid var(--card-bg);
    box-shadow: 0 0 0 2px rgba(41,151,255,0.35);
    margin-left: -2px;
    }

    .xp-main {
    min-width: 0;
    }

    .xp-title {
    display: flex;
    align-items: baseline;
    gap: 8px;
    flex-wrap: wrap;
    }

    .xp-role {
    font-weight: 700;
    font-size: 1.05rem;
    color: rgba(255,255,255,0.95);
    }

    .xp-at {
    opacity: 0.6;
    }

    .xp-org {
    font-weight: 650;
    color: rgba(255,255,255,0.85);
    }

    .xp-chips {
    margin-top: 6px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    }

    .xp-chip {
    font-size: 0.78rem;
    padding: 4px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.12);
    background: rgba(0,0,0,0.25);
    color: rgba(255,255,255,0.78);
    }

    .xp-meta {
    display: flex;
    align-items: center;
    gap: 10px;
    white-space: nowrap;
    }

    .xp-date {
    color: rgba(255,255,255,0.72);
    font-weight: 600;
    font-size: 0.92rem;
    }

    .xp-caret {
    display: inline-block;
    transform: rotate(90deg);
    opacity: 0.65;
    transition: transform 0.2s ease, opacity 0.2s ease;
    }

    .xp-item[open] {
    background: linear-gradient(135deg, rgba(41,151,255,0.10) 0%, rgba(0,0,0,0) 60%);
    border-color: rgba(41,151,255,0.35);
    }

    .xp-item[open] .xp-caret {
    transform: rotate(-90deg);
    opacity: 1;
    }

    .xp-body {
    padding: 0 16px 14px 48px;
    color: rgba(255,255,255,0.80);
    }

    .xp-body ul {
    margin: 10px 0 0 0;
    padding-left: 0;
    list-style: none;
    }

    .xp-body li {
    position: relative;
    padding-left: 18px;
    margin-bottom: 8px;
    }

    .xp-body li:before {
    content: "‚Ä¢";
    position: absolute;
    left: 0;
    color: rgba(41,151,255,0.95);
    }

    @media (max-width: 768px) {
    .xp-summary {
        grid-template-columns: 18px 1fr;
        grid-template-rows: auto auto;
    }

    .xp-meta {
        grid-column: 2 / 3;
        justify-content: space-between;
    }

    .xp-body {
        padding-left: 16px;
    }
    }

    #experience .xp-title a,
    #experience a.xp-role,
    #experience a.xp-org,
    #experience a.xp-title-link {
    color: var(--apple-blue) !important;
    font-weight: 650;
    }

    #experience .xp-title a:hover,
    #experience a.xp-role:hover,
    #experience a.xp-org:hover,
    #experience a.xp-title-link:hover {
    color: var(--apple-blue) !important;
    }

    #experience a.xp-title-link .xp-role,
    #experience a.xp-title-link .xp-org,
    #experience a.xp-title-link .xp-at {
    color: inherit !important;
    }

    #experience span.xp-org:hover {
    color: rgba(255,255,255,0.85) !important;
    }


</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sections = document.querySelectorAll('section');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });
        
        sections.forEach(section => {
            observer.observe(section);
        });

        const lightbox = document.getElementById('lightbox') as HTMLDivElement | null;
        const lbImg = lightbox?.querySelector('.lightbox-img') as HTMLImageElement | null;
        const lbCaption = lightbox?.querySelector('.lightbox-caption') as HTMLElement | null;

        let activeHref: string | null = null;
        let armNavigateAt = 0;

        const openLightbox = (imgEl: HTMLImageElement) => {
        if (!lightbox || !lbImg || !lbCaption) return;

        lbImg.src = imgEl.src;
        lbImg.alt = imgEl.alt || '';
        lbCaption.textContent =
            imgEl.dataset.caption ||
            (imgEl.closest('.gallery-item')?.querySelector('.gallery-caption') as HTMLElement | null)?.textContent ||
            '';

        activeHref = imgEl.dataset.link || null;
        armNavigateAt = Date.now() + 400;

        lightbox.classList.add('open');
        lightbox.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        };

        const closeLightbox = () => {
        if (!lightbox || !lbImg) return;

        lightbox.classList.remove('open');
        lightbox.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';

        activeHref = null;

        setTimeout(() => { lbImg.src = ''; }, 150);
        };

        document
        .querySelectorAll<HTMLImageElement>('.gallery-item img, .gallery-media img')
        .forEach((img) => img.addEventListener('click', () => openLightbox(img)));

        lbImg?.addEventListener('click', (e) => {
