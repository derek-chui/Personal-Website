<style>
    /* General CSS */

    /* Root */
    :root {
        --apple-blue: #2997ff;
        --bg-dark: #000;
        --card-bg: #1a1a1a;
    }

    /* Key Frames */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }

    /* Base Styles */
    body {
        background-color: var(--bg-dark);
        color: white;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Typography */
    h1, h2, h3 {
        font-weight: 600;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2.8rem;
        background: #ffffff;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: inline-block;
    }

    h2 {
        font-size: 2.2rem;
        position: relative;
        display: inline-block;
    }

    h2:after {
        content: '';
        position: absolute;
        width: 50%;
        height: 4px;
        bottom: -8px;
        left: 0;
        background: linear-gradient(90deg, var(--apple-blue), transparent);
        border-radius: 2px;
    }

    h3 {
        font-size: 1.6rem;
    }

    /* Links & Buttons */
    a {
        color: var(--apple-blue);
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
    }

    a:hover {
        color: var(--apple-blue);
    }

    a::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: var(--apple-blue);
        transition: width 0.3s ease;
    }

    a:hover::after {
        width: 100%;
        display: none;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        background-color: var(--apple-blue);
        color: #fff;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        font-weight: 500;
    }

    .btn:hover {
        background-color: #2997ff;
        transform: translateY(-3px);
        color: white;
    }

    .btn-minor {
        display: inline-block;
        padding: 12px 24px;
        background-color: #1a1a1a;
        color: #fff;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-minor:hover {
        background-color: #2997ff;
        transform: translateY(-3px);
    }

    /* Cards */
    html {
        scroll-behavior: smooth;
    }

    .card {
        background-color: var(--card-bg);
        border-radius: 16px;
        padding: 28px;
        margin-bottom: 28px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0;
        animation: fadeIn 0.6s forwards;
        animation-delay: calc(var(--order) * 0.1s);
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.25);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .card ul {
        list-style-type: none;
        padding-left: 0;
    }

    .card ul li {
        margin-bottom: 16px;
        padding-left: 24px;
        position: relative;
    }

    .card ul li:before {
        content: '→';
        position: absolute;
        left: 0;
        color: white;
    }

    section {
        margin-bottom: 60px;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.6s ease;
    }

    section.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Section Based CSS*/

    /* Hero */
    .hero {
        text-align: center;
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
    }

    .hero:before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(41, 151, 255, 0.1) 0%, rgba(0, 0, 0, 0) 70%);
        z-index: -1;
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 24px;
        animation: float 4s ease-in-out infinite;
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto 32px;
    }

    .hero-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-top: 32px;
    }

    /* Most Used */
    .tech-card {
        transform-origin: center;
        will-change: transform;
    }

    .tech-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 10px 25px rgba(41, 151, 255, 0.15);
        border-color: rgba(41, 151, 255, 0.4);
        background: linear-gradient(135deg, rgba(41, 151, 255, 0.15) 0%, rgba(0, 0, 0, 0) 100%) !important;
        transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94); /* Smoother easing */
    }

    .tech-grid {
        animation: fadeIn 0.6s forwards;
        transform-style: preserve-3d; /* Helps with smooth transitions */
    }

    @media (max-width: 768px) {
        .tech-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Project */
    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 24px;
        margin-top: 32px;
    }

    .project-card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 24px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .project-card h3 {
        margin-top: 0;
    }

    .project-card .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin: 16px 0;
    }

    .project-card .tag {
        background: rgba(41, 151, 255, 0.2);
        color: var(--apple-blue);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    /* Experience */
    .timeline {
        position: relative;
        padding-left: 30px;
        margin-top: 40px;
    }

    .timeline:before {
        content: '';
        position: absolute;
        left: 6px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, var(--apple-blue), transparent);

    }

    .timeline-item {
        position: relative;
        margin-bottom: 40px;
        padding-left: 30px;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-item:before {
        content: '';
        position: absolute;
        left: 0;
        top: 5px;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: white;
        border: 3px solid var(--card-bg);
    }

    .timeline-date {
        color: white;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .timeline-content h3 {
        margin-top: 0;
    }

    /* Education */
    #education .card {
        background-color: #1a1a1a;
        border-left: 6px solid #b30738;
    }

    #education h2:after {
        background: linear-gradient(90deg, #b30738, transparent);
    }

    #education h3 {
        color: #b30738;
    }

    #education .btn {
        background-color: #b30738;
    }

    #education .btn:hover {
        background-color: #9d0631;
    }

    #education .card:hover {
        box-shadow: 0 12px 28px rgba(179, 7, 56, 0.2);
        border-color: rgba(179, 7, 56, 0.3);
    }

    #education img {
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    
    #education img:hover {
        transform: scale(1.05);
        opacity: 1;
    }  

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        h1 {
            font-size: 2.2rem;
        }
        
        h2 {
            font-size: 1.8rem;
        }
        
        .hero h1 {
            font-size: 2.5rem;
        }
        
        .project-grid {
            grid-template-columns: 1fr;
        }
        
        .hero-buttons {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<script>
    //SCROLL ANIMATIONS
    document.addEventListener('DOMContentLoaded', () => {
        const sections = document.querySelectorAll('section');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });
        
        sections.forEach(section => {
            observer.observe(section);
        });
