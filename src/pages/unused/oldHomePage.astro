<style>
    body {
        background-color: #000; /* Pure black background */
        color: #fff; /* White text */
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; /* Apple-style font stack */
        line-height: 1.6; /* Improved readability */
        margin: 0;
        padding: 0;
    }

    a {
        color: #2997ff; /* Apple's blue accent color */
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #1e90ff; /* Slightly lighter blue on hover */
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #2997ff; /* Apple's blue */
        color: white;
        border-radius: 8px; /* Slightly rounded corners */
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #1e90ff; /* Slightly lighter blue on hover */
    }

    html {
        scroll-behavior: smooth;
    }

    /* Card styling */
    .card {
        background-color: #1a1a1a; /* Dark gray background */
        border-radius: 12px; /* Rounded corners */
        padding: 24px;
        margin-bottom: 24px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1); /* Subtle border */
    }

    .card:hover {
        transform: translateY(-5px); /* Subtle float effect */
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2); /* Soft shadow */
    }

    /* List styling inside cards */
    .card ul {
        list-style-type: disc;
        padding-left: 24px;
    }

    .card ul li {
        margin-bottom: 12px;
    }

    /* Headings */
    h1, h2, h3 {
        font-weight: 600; /* Semi-bold for headings */
        margin-bottom: 16px;
    }

    h1 {
        font-size: 2.5rem; /* Large heading */
    }

    h2 {
        font-size: 2rem; /* Medium heading */
    }

    h3 {
        font-size: 1.5rem; /* Small heading */
    }

    /* Section spacing */
    section {
        margin-bottom: 40px;
    }
</style>

