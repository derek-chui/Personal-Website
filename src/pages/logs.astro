---
import Layout from '../layouts/Layout.astro';
---

<style>
    /* General CSS */
    
    /* Root */
    :root {
        --bg-dark: #000;
        --text-light: #fff;
        --text-muted: #999;
        --card-bg: #1a1a1a;
        --card-bg-light: #252525;
        --accent-blue: #2997ff;
        --border-light: rgba(255, 255, 255, 0.1);
        --shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        --transition: all 0.3s ease;
        
        --easy-bg: rgba(0, 184, 163, 0.1);
        --easy-text: #00b8a3;
        --medium-bg: rgba(255, 192, 30, 0.1);
        --medium-text: #ffc01e;
        --hard-bg: rgba(255, 55, 95, 0.1);
        --hard-text: #ff375f;
    }

    /* Base Styles */
    body {
        background-color: var(--bg-dark);
        color: var(--text-light);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 
                    'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
    }

    /* Typography */
    h1, h2, h3 {
        font-weight: 600;
        margin-bottom: 1rem;
    }

    h1 { font-size: 2.5rem; }
    h2 { font-size: 2rem; }
    h3 { font-size: 1.5rem; }

    .text-muted {
        color: var(--text-muted);
        font-size: 0.875rem;
    }

    /* Links & Buttons */
    a {
        color: var(--accent-blue);
        text-decoration: none;
        transition: var(--transition);
        margin-top: 0.75rem;
    }

    a:hover {
        color: var(--text-light);
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--card-bg);
        color: var(--text-light);
        border-radius: 0.5rem;
        text-align: center;
        transition: var(--transition);
        border: 1px solid var(--border-light);
    }

    .btn:hover {
        background-color: var(--accent-blue);
        transform: translateY(-0.1875rem);
    }

    /* Layout & Spacing */
    section {
        margin-bottom: 2.5rem;
    }

    .mb-6 {
        margin-bottom: 1.5rem;
    }

    /* Cards */
    .card {
        background-color: var(--card-bg);
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: var(--transition);
        border: 1px solid var(--border-light);
    }

    .card:hover {
        transform: translateY(-0.3125rem);
        box-shadow: var(--shadow);
    }

    /* Section Based CSS */

    /* Recent Thoughts */
    .blog-post {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-light);
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .blog-post h3 {
        margin: 0;
    }

    .blog-post .excerpt {
        margin-bottom: 0.75rem;
    }

    .date {
        color: var(--text-muted);
        font-size: 0.875rem;
    }

    /* Responsive Adjustments */
    @media (max-width: 640px) {
        h1 { font-size: 2rem; }
        h2 { font-size: 1.75rem; }
        
        .stats-grid {
            grid-template-columns: 1fr 1fr;
        }
        
        .flex-container {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<Layout title="Logs">
    <h1 class="mb-6">Logs</h1>

    <!-- RECENT THOUGHTS -->
    <section>
        <div class="card">
            <!-- <h2 class="mb-6">Recent Thoughts</h2> -->
            
            <div class="blog-post">
                <h3>Log 1: Tutorial Hell</h3>
                <div class="date">Mar 29, 2025</div>
                <a href="/logs/log1" class="btn">Read Log</a>
            </div>
        </div>
    </section>
</Layout>