                    <div class="stat-value">0</div>
                    <div class="stat-label">Total Solved</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Easy</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Medium</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Hard</div>
                </div>
            </div>
            <div class="flex-container" style="margin-top: 24px;">
                <!-- <a href="https://leetcode.com/u/derek_chui/" class="btn">View LeetCode Profile</a> -->
            </div>
        </div>
    </section>

    <!-- RECENT THOUGHTS -->
    <section>
        <div class="card">
            <h2 class="mb-6">Recent Thoughts</h2>
            
            <div class="blog-post">
                <h3>Title 1</h3>
                <div class="date">Mar 26, 2025</div>
