---
import Layout from '../layouts/Layout.astro';
---

<Layout title="My Resume">
    <div class="flex flex-col items-center justify-center min-h-screen text-center">
        <h1 class="text-4xl font-bold mb-6">My Resume</h1>
        <p class="text-lg mb-8">
            You can view and download my resume by clicking the link below:
        </p>
        <a
            href="https://docs.google.com/document/d/1SqrhUDSF9C6EaKg9LuVlPoM_GqUKX6dB/edit?usp=sharing&ouid=112570999586883418159&rtpof=true&sd=true"
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
        >
            View Resume
        </a>
        <a
            href="/"
            class="mt-4 px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors"
        >
            Back to Home
        </a>
    </div>
</Layout>