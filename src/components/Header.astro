---
const navItems = [
    { linkText: 'Football', href: '/football' },
    { linkText: 'Resume', href: '/DerekChuiResume.pdf', newTab: true },
    { linkText: 'Research', href: '/research' },
    { linkText: 'Archives', href: '/archives' },
];
---

<style>
    .nav-link {
        text-decoration: none;
        color: white;
        transition: color 0.2s ease;
    }

    .nav-link:hover {
        text-decoration: none;
        color: #1e90ff;
    }

    .site-title {
        text-decoration: none;
        color: white;
        font-size: 1.4rem;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    .site-title:hover {
        color: #1e90ff;
    }
</style>

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/" class="site-title">derekchui.com</a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1 ml-auto">
                {navItems.map((item) => (
                    <li>
                        <a
                        href={item.href}
                        class="nav-link inline-block px-1.5 py-1 sm:px-3 sm:py-2"
                        target={item.newTab ? "_blank" : undefined}
                        rel={item.newTab ? "noopener noreferrer" : undefined}
                        >
                        {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
